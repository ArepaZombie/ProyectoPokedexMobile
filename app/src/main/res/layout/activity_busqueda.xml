<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#D2232A"
  android:orientation="vertical"
  tools:context=".BusquedaActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tvBusqueda"
      android:layout_width="342dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_marginTop="5dp"
      android:background="#58595B"
      android:hint="Busca por nombre!"
      android:textColor="#AFAAAA"
      android:textColorHint="#AFAAAA"
      android:textSize="20sp" />

    <Button
      android:id="@+id/btnBuscar"
      android:layout_width="10dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:backgroundTint="#3FBF48"
      android:minWidth="0dp"
      android:minHeight="0dp"
      android:text="🔍"
      android:textAlignment="center"
      android:textSize="10sp" />
  </LinearLayout>

</LinearLayout>
